<!DOCTYPE html>
<html lang="en" translate="no">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="styles.css">
  <title>Alle Kurse</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-success fixed-top">
      <a class="navbar-brand mr-4" href="/">
        <img class="rounded mr-2" src="logo.png" alt="Logo" width="50" height="50">
        Sprachschule Aktiv
      </a>
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="#">Alle Kurse</a>
      </div>
    </nav>
  </header>

  <div class="container content-section">
    <h1>Alle Kurse</h1>
    <p class="text-secondary">Hochgeladen am <%= lastUploaded %></p>
    <hr>
    <% for (const d of data) { %>
    <table class="table table-striped table-bordered table-hover">
      <thead class="thead-light">
        <tr>
          <th class="text-center align-middle" colspan="5"><h3 class="mb-0"><%= d.time %></h3></th>
        </tr>
      </thead>
      <% for (const c of d.classes) {%>
      <tr>
        <td class="text-center align-middle" style="width: 5%; font-size: 1.5rem;"><%= c[0] %></td>
        <td class="align-middle text-dark" style="width: 45%"><%= c[1] %></td>
        <td class="align-middle text-dark" style="width: 15%"><%= c[2] %> <%= c[3] %></td>
        <td class="align-middle text-dark" style="width: 15%"><%= c[4] %></td>
      </tr>
      <% } %>
    </table>
    <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>
